<!-- this is CooldownViewerEssentialItemTemplate with minor modifications -->
<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/beta/Interface/AddOns/Blizzard_SharedXML/UI.xsd">
    <Frame name="TargetedSpellsFrameTemplate" mixin="TargetedSpellsMixin" virtual="true">
        <Layers>
            <Layer level="ARTWORK">
                <Texture parentKey="Icon" setAllPoints="true" />
                <MaskTexture atlas="UI-HUD-CoolDownManager-Mask" setAllPoints="true">
                    <MaskedTextures>
                        <MaskedTexture childKey="Icon" />
                    </MaskedTextures>
                </MaskTexture>
            </Layer>
            <Layer level="OVERLAY">
                <Texture atlas="UI-HUD-CoolDownManager-IconOverlay" parentKey="Overlay">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="-15" y="15" />
                        <Anchor point="BOTTOMRIGHT" x="15" y="-15" />
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <Cooldown parentKey="Cooldown" setAllPoints="true">
                <SwipeTexture file="Interface\HUD\UI-HUD-CoolDownManager-Icon-Swipe">
                    <Color r="0" g="0" b="0" a="0.7" />
                </SwipeTexture>
            </Cooldown>
            <Frame parentKey="Border" hidden="true" inherits="BackdropTemplate" mixin="BackdropTemplateMixin" frameStrata="BACKGROUND" setAllPoints="true">
                <KeyValues>
                    <KeyValue key="backdropInfo" value="TARGETED_SPELLS_BACKDROP" type="global" />
                </KeyValues>
            </Frame>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad" />
            <OnSizeChanged method="OnSizeChanged" />
        </Scripts>
    </Frame>
</Ui>